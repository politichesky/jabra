<h1>Изменить проект</h1>
<%= form_for @project, :html => {:class=>"some-cool-class"} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Изменить" %>
  </div>
<% end %>
